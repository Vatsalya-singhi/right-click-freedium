{
  "name": "Right Click Freedium",
  "short_name": "Right Click Freedium",
  "description": "A right-click tool to view Medium articles in a clean, reader-friendly layout.",
  "version": "1.0.2",
  "author": "vatsalya.singhi@gmail.com",
  "manifest_version": 3,
  "action": {
    "default_title": "Right Click Freedium",
    "default_popup": "./src/index.html",
    "default_locale": "en",
    "default_icon": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    }
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "declarativeContent"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://medium.com/*",
    "*://*.medium.com/*"
  ],
  "homepage_url": "https://vatsalyasinghi.github.io/right-click-freedium/"
}
